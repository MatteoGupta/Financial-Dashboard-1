abel for="auto-loans">Auto Loans:</label> <input type="number" id="auto-loans" placeholder="Auto Loans" value="5000"> <label for="personal-loans">Personal Loans:</label> <input type="number" id="personal-loans" placeholder="Personal Loans" value="10000"> </div> <!-- Retirement Section --> <div class="section"> <h2>Retirement</h2> <label for="401k">401k:</label> <input type="number" id="401k" placeholder="401k" value="100000"> <label for="ira">IRA:</label> <input type="number" id="ira" placeholder="IRA" value="50000"> <label for="pension">Pension:</label> <input type="number" id="pension" placeholder="Pension" value="200000"> </div> </div> <!-- Summary Section --> <div class="summary"> <h2>Summary</h2> <p>Total Debt: $<span id="total-debt"></span></p> <p>Total Assets: $<span id="total-assets"></span></p> <p>Total Worth: $<span id="total-worth"></span></p> <button onclick="calculate()">Calculate</button> </div> <script> function calculate() { // Debt Calculation const creditCard = parseFloat(document.getElementById('credit-card').value) || 0; const autoLoans = parseFloat(document.getElementById('auto-loans').value) || 0; const personalLoans = parseFloat(document.getElementById('personal-loans').value) || 0; const totalDebt = creditCard + autoLoans + personalLoans; document.getElementById('total-debt').textContent = totalDebt.toFixed(2); // Assets Calculation const savings = parseFloat(document.getElementById('savings').value) || 0; const checking = parseFloat(document.getElementById('checking').value) || 0; const stockAccounts = parseFloat(document.getElementById('stock-accounts').value) || 0; const crypto = parseFloat(document.getElementById('crypto').value) || 0; const bonds = parseFloat(document.getElementById('bonds').value) || 0; const gold = parseFloat(document.getElementById('gold').value) || 0; const silver = parseFloat(document.getElementById('silver').value) || 0; const cash = parseFloat(document.getElementById('cash').value) || 0; const retirement401k = parseFloat(document.getElementById('401k').value) || 0; const ira = parseFloat(document.getElementById('ira').value) || 0; const pension = parseFloat(document.getElementById('pension').value) || 0; const totalAssets = savings + checking + stockAccounts + crypto + bonds + gold + silver + cash + retirement401k + ira + pension; document.getElementById('total-assets').textContent = totalAssets.toFixed(2); // Net Worth Calculation const totalWorth = totalAssets - totalDebt; document.getElementById('total-worth').textContent = totalWorth.toFixed(2); } </script> </body> </html>
